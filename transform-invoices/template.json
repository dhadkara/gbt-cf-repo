{
   "AWSTemplateFormatVersion": "2010-09-09",
   "Parameters": {
      "ServiceName": {
         "Description": "MicroServiceName",
         "Type": "String",
         "Default": "invoicefiletransformerservice"
      },
      "AWSEnvironment": {
         "Description": "AWS Environment Name",
         "Type": "String"
      },
      "LambdaRole": {
         "Description": "AWS Lambda Role",
         "Type": "String"
      }
   },
   "Conditions": {
      "CreateMockResources": {
         "Fn::Or": [
            {
               "Fn::Equals": [
                  {
                     "Ref": "AWSEnvironment"
                  },
                  "aat"
               ]
            },
            {
               "Fn::Equals": [
                  {
                     "Ref": "AWSEnvironment"
                  },
                  "perf"
               ]
            }
         ]
      }
   },
   "Resources": {
      "HelloLambda": {
         "Type": "AWS::Lambda::Function",
         "Properties": {
            "FunctionName": "HelloLambda",
            "Handler": "src/index.handler",
            "Role": {
               "Fn::Join": [
                  "",
                  [
                     "arn:aws:iam::",
                     {
                        "Ref": "AWS::AccountId"
                     },
                     ":role/",
                     {
                        "Ref": "LambdaRole"
                     }
                  ]
               ]
            },
            "Code": {
               "S3Bucket": "gbt-deployment-bucket-dev",
               "S3Key": "HelloLambda"
            },
            "Runtime": "nodejs12.x",
            "Timeout": 300
         }
      },
      "S3BucketMock": {
         "Type": "AWS::S3::Bucket",
         "Condition": "CreateMockResources",
         "Properties": {
            "BucketName": {
               "Fn::Join": [
                  "-",
                  [
                     {
                        "Ref": "ServiceName"
                     },
                     {
                        "Ref": "AWSEnvironment"
                     },
                     "bronze-mock"
                  ]
               ]
            },
            "NotificationConfiguration": {
               "TopicConfigurations": [
                  {
                     "Event": "s3:ObjectCreated:*",
                     "Topic": {
                        "Ref": "BronzeTopicMock"
                     }
                  }
               ]
            },
            "LifecycleConfiguration": {
               "Rules": [
                  {
                     "Id": "DeleteContentAfter30Days",
                     "Status": "Enabled",
                     "ExpirationInDays": 30
                  }
               ]
            }
         },
         "DeletionPolicy": "Delete"
      },
      "BronzeTopicMock": {
         "Type": "AWS::SNS::Topic",
         "Condition": "CreateMockResources",
         "Properties": {
            "TopicName": {
               "Fn::Join": [
                  "-",
                  [
                     "invoice-bucket-trigger",
                     {
                        "Ref": "AWSEnvironment"
                     }
                  ]
               ]
            }
         }
      },
      "BronzeTopicPolicyMock": {
         "Type": "AWS::SNS::TopicPolicy",
         "Condition": "CreateMockResources",
         "Properties": {
            "PolicyDocument": {
               "Version": "2012-10-17",
               "Statement": [
                  {
                     "Sid": "AllowBucketToPushNotificationEffect",
                     "Effect": "Allow",
                     "Principal": {
                        "Service": "s3.amazonaws.com"
                     },
                     "Action": "sns:Publish",
                     "Resource": "*"
                  }
               ]
            },
            "Topics": [
               {
                  "Ref": "BronzeTopicMock"
               }
            ]
         }
      },
      "BronzeTopicSubscription": {
         "Type": "AWS::SNS::Subscription",
         "Properties": {
            "Endpoint": {
               "Fn::GetAtt": [
                  "HelloLambda",
                  "Arn"
               ]
            },
            "Protocol": "lambda",
            "TopicArn": {
               "Ref": "BronzeTopicMock"
            }
         }
      },
      "HelloLambdaFunctionPermission": {
         "Type": "AWS::Lambda::Permission",
         "Properties": {
            "Action": "lambda:InvokeFunction",
            "Principal": "sns.amazonaws.com",
            "SourceArn": {
              "Ref": "BronzeTopicMock"
            },
            "FunctionName": {
               "Fn::GetAtt": [
                  "HelloLambda",
                  "Arn"
               ]
            }
         }
      },
      "S3BucketSilver": {
         "Type": "AWS::S3::Bucket",
         "Properties": {
            "BucketName": {
               "Fn::Join": [
                  "-",
                  [
                     {
                        "Ref": "ServiceName"
                     },
                     {
                        "Ref": "AWSEnvironment"
                     },
                     "silver"
                  ]
               ]
            },
            "LifecycleConfiguration": {
               "Rules": [
                  {
                     "Id": "DeleteContentAfter30Days",
                     "Status": "Enabled",
                     "ExpirationInDays": 30
                  }
               ]
            }
         },
         "DeletionPolicy": "Delete"
      }
   }
}